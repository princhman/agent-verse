{
  "$schema": "https://railway.app/railway.schema.json",
  "services": {
    "backend": {
      "dir": "backend",
      "buildCommand": "pip install -r requirements.txt",
      "startCommand": "gunicorn -w 4 -b 0.0.0.0:$PORT main:app"
    },
    "frontend": {
      "dir": "frontend",
      "buildCommand": "pnpm install && pnpm build",
      "startCommand": "node build"
    }
  }
}
